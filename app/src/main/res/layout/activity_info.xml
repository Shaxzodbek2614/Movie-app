<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoActivity">
    <TextView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Avengers"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:background="#00E2FF"
        android:padding="20dp"/>
    <LinearLayout
        android:id="@+id/liner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        app:layout_constraintTop_toBottomOf="@id/info"
        android:orientation="vertical">
        <TextView
            android:layout_marginVertical="10dp"
            android:id="@+id/info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movie name: Avengers"
            android:textSize="34sp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_marginVertical="10dp"
            android:id="@+id/info_authors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movie authors: Sanjar Suvonov, Shamsiddin kokmilov"
            android:textSize="25sp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_marginVertical="10dp"
            android:id="@+id/info_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About movie: Zo'r kino"
            android:textSize="25sp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_marginVertical="10dp"
            android:id="@+id/info_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: 05.02.2024"
            android:textSize="25sp"
            android:textColor="@color/black"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_close"
        android:layout_width="120dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/liner"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintHorizontal_bias="0.9"
        android:backgroundTint="#00E2FF"
        android:text="Close"
        android:textSize="20sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>